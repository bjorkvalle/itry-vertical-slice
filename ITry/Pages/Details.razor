@page "/details/{id:int}"
@page "/details"

<PageTitle>@TabTitle</PageTitle>

<TodoForm ModelId="Id" OnIsEdit="HandleEditMode" />

@code {
    [Parameter] public int Id { get; set; }

    private string modelTitle;

    private void HandleEditMode(string title)
    {
        modelTitle = title;
    }

    // create notification event instead to try it out?
    public string TabTitle => !string.IsNullOrEmpty(modelTitle) ? $"ITry - {modelTitle}" : "ITry";
}
